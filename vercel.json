{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/reflections-simple.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/analyze/voice.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
